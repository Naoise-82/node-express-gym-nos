<form class="ui segment form" action="/memberdashboard/addgoal" method="POST">
    <h3 class="ui header"><i class="yellow plus icon"></i> Add New Goal </h3>
    <div class="fields">
        <div class="field">
            <label>Set a Deadline</label>
            <div class="ui calendar" id="custom_format_calendar">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" placeholder="Date" name="date">
                </div>
            </div>
        </div>
    </div>
    <div class="fields">
        <div class="field">
            <label>Target Area 1</label>
            <select class="ui dropdown" name="targetArea1">
                <option value="Weight">Weight (kg)</option>
                <option value="Chest">Chest (cm)</option>
            </select>
        </div>
        <div class="field">
            <label>Target Measurement</label>
            <input type="number" step="0.01" name="targetMeasurement1" placeholder="0.00">
        </div>
    </div>
    <div class="fields">
        <div class="field">
            <label>Target Area 2</label>
            <select class="ui dropdown" name="targetArea2">
                <option value="Weight">Weight (kg)</option>
                <option value="Chest">Chest (cm)</option>
            </select>
        </div>
        <div class="field">
            <label>Target Measurement</label>
            <input type="number" step="0.01" name="targetMeasurement2" placeholder="0.00">
        </div>
    </div>
    <div class="field">
        <p style="font-size: x-large"></p>
        <button class="ui blue submit button">Add Goal</button>
    </div>
</form>

<script>
    $('#custom_format_calendar')
            .calendar({
                monthFirst: false,
                type: 'date',
                formatter: {
                    date: function (date, settings) {
                        if (!date) return '';
                        const day = date.getDate();
                        const month = date.getMonth()+1;
                        const year = date.getFullYear()-2000;
                        return year + '/' + month + '/' + day;
                    }
                }
            })
    ;
</script>